<div class="container">
  <%= form_tag :search, method: :get, class: "form-inline" do %>
    <div class="form-group search-field">
      <%= text_field_tag :q, "Search by zip...", class: "fomr-control", id: "Find Events" %>
      <%= submit_tag "Find Stores", class: "btn btn-primary", id: "Find Stores" %>
    </div>
    <%end%>
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
